  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select dept_id, dept_name
    from tl_dept
    where dept_id = #{deptId,jdbcType=INTEGER}
  </select>
